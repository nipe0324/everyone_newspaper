<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
	<div class="span6 offset3">
		<div id="login_info">
			<h4>デモアカウント</h4>
			<p>
				管理者<br>
				メールアドレス　:　admin@example.com<br />
				パスワード　　　:　foobar
			</p>
			<p>
				一般ユーザ<br>
				メールアドレス　:　user1@example.com<br />
				パスワード　　　:　foobar
			</p>
		</div>

		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email, "メールアドレス" %>
			<%= f.email_field :email %>

			<%= f.label :password, "パスワード" %>
			<%= f.password_field :password %>

			<%= f.submit "ログイン", class: "btn btn-large btn-success" %>
		<% end %>

		<p><%= link_to "ユーザアカウント登録？", signup_path %></p>
	</div><!-- /.span6 .offset3 -->
</div><!-- /.row -->